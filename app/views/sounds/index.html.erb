<p id="notice"><%= notice %></p>

<h1>Listing Sounds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Soundfile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sounds.each do |sound| %>
      <tr>
        <td><%= sound.name %></td>
        <td><%= sound.soundfile %></td>
        <td><%= link_to 'Show', sound %></td>
        <td><%= link_to 'Edit', edit_sound_path(sound) %></td>
        <td><%= link_to 'Destroy', sound, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Download", download_sound_path(sound) %></td>
        <td><%= link_to 'Play', play_sound_path(sound) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

